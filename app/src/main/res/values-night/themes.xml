<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp20" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.WeatherApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.WeatherApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.WeatherApp20.Winter">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorDarkGrey</item>
        <item name="colorPrimaryVariant">@color/colorLightGrey</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.WeatherApp20.Spring">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorGreenPrimary</item>
        <item name="colorPrimaryVariant">@color/colorGreenPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorGreenAccent</item>
    </style>
</resources>